<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AnimalApp.AddAnimalWindow"
        Title="Add Animal" Width="300" Height="200">

  <StackPanel Margin="10">
    <TextBox x:Name="NameInput" Watermark="Name"/>
    <TextBox x:Name="AgeInput" Watermark="Age"/>
    <ComboBox x:Name="TypeSelect"/>
    <Button x:Name="AddBtn" Content="Add"/>
  </StackPanel>
</Window>
